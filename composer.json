    "keywords": ["utilities", "path", "collections"],
    "version": "0.0.1",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-tools",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.develpment@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
