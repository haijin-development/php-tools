{
    "name": "haijin/tools",
    "description": "Common tools to use in PHP applications.",
    "keywords": ["reflection", "metaprogramming", "utilities", "path"],
    "version": "0.0.1",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/haijin-development/php-tools",
    "authors": [
        {
            "name": "Haijin Development",
            "email": "haijin.develpment@gmail.com",
            "homepage": "https://github.com/haijin-development",
            "role": "developer"
        }
    ],
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "repositories": {
        "haijin/testing": {
            "type": "path",
            "url": "../php-testing",
            "options": {
            "symlink": true
            }
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "phpdocumentor/phpdocumentor": "2.*",
        "Haijin/testing": "^0.0.1"
    },
    "autoload": {
        "psr-4": {
            "Haijin\\Tools\\": ["src/collections", "src/path", "src/closure-context"]
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests/ --bootstrap vendor/autoload.php",
        "document": "./vendor/bin/phpdoc -d src/ -t documentation/api"
    }
}
